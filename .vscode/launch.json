{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch WebSocket Server",
      "program": "${workspaceFolder}/backend/src/server.js",
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "sourceMaps": true,
      "console": "integratedTerminal"
    }
  ]
}

